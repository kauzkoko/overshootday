{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Earth Overshoot Day",
  "version": "1.0.0",
  "identifier": "com.earthovershootday.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun generate"
  },
  "app": {
    "windows": [
      {
        "title": "Earth Overshoot Day",
        "width": 400,
        "height": 600,
        "resizable": true,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
